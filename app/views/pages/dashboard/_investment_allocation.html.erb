<%# locals: (investment_statement:, allocation_data:) %>
<div id="investment-allocation-section">
  <div class="px-4">
    <div class="flex flex-col lg:flex-row gap-8 items-center">
      <!-- Donut Chart -->
      <div class="w-full lg:w-1/3 max-w-[300px] px-4">
        <div class="h-[300px] relative"
          data-controller="donut-chart"
          data-donut-chart-segments-value="<%= allocation_data[:segments].to_json %>"
          data-donut-chart-segment-opacity-value="0.9"
          data-donut-chart-extended-hover-value="true"
          data-donut-chart-hover-extension-value="3"
          data-donut-chart-enable-click-value="false">
          <div data-donut-chart-target="chartContainer" class="absolute inset-0 pointer-events-none"></div>

          <div data-donut-chart-target="contentContainer" class="flex justify-center items-center h-full">
            <div data-donut-chart-target="defaultContent" class="flex flex-col items-center text-center">
              <div class="text-secondary text-sm mb-2">
                <span><%= t("pages.dashboard.investment_allocation.total_portfolio") %></span>
              </div>

              <div class="text-3xl font-medium text-primary">
                <%= format_money Money.new(allocation_data[:total], allocation_data[:currency]) %>
              </div>
            </div>

            <% allocation_data[:segments].each do |segment| %>
              <div id="segment_<%= segment[:id] %>" class="hidden">
                <div class="flex flex-col gap-2 items-center text-center">
                  <p class="text-sm text-secondary"><%= segment[:name] %></p>

                  <p class="text-3xl font-medium text-primary">
                    <%= allocation_data[:currency_symbol] %><%= number_with_delimiter(segment[:amount], delimiter: ",") %>
                  </p>

                  <p class="text-sm text-secondary"><%= segment[:percentage] %>%</p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Allocation List -->
      <div class="w-full lg:w-2/3 bg-container-inset rounded-xl p-1 space-y-1 overflow-x-auto">
        <div class="px-4 py-2 flex items-center uppercase text-xs font-medium text-secondary">
          <div class="w-16 lg:w-40">
            <p><%= t("pages.dashboard.investment_allocation.envelopes") %><span class="text-subdued mx-1">&middot;</span><%= allocation_data[:segments].count %></p>
          </div>
          <div class="ml-auto text-right flex items-center gap-6">
            <div class="w-16 lg:w-40">
              <p><%= t("pages.dashboard.investment_allocation.value") %></p>
            </div>
            <div class="w-16">
              <p><%= t("pages.dashboard.investment_allocation.weight") %></p>
            </div>
          </div>
        </div>
        <div class="py-3 shadow-border-xs rounded-lg bg-container font-medium text-sm max-w-full">
          <% allocation_data[:segments].each_with_index do |segment, idx| %>
            <div class="flex items-center justify-between mx-3 p-3 rounded-lg group gap-3"
                data-category-id="<%= segment[:id] %>"
                data-action="mouseenter->donut-chart#highlightSegment mouseleave->donut-chart#unhighlightSegment">
              <div class="flex items-center gap-3 flex-1 min-w-0">
                <div class="h-7 w-7 flex-shrink-0 group-hover:scale-105 transition-all duration-300 rounded-full flex justify-center items-center"
                  style="
                    background-color: color-mix(in oklab, <%= segment[:color] %> 10%, transparent);
                    border-color: color-mix(in oklab, <%= segment[:color] %> 10%, transparent);
                    color: <%= segment[:color] %>;">
                  <%= icon(segment[:icon], color: "current", size: "sm") %>
                </div>
                <span class="text-sm font-medium text-primary truncate"><%= segment[:name] %></span>
              </div>
              <div class="flex items-center gap-4 flex-shrink-0 text-right">
                <span class="text-sm font-medium text-primary whitespace-nowrap"><%= format_money Money.new(segment[:amount], segment[:currency]) %></span>
                <span class="text-sm text-secondary whitespace-nowrap w-10 lg:w-15"><%= segment[:percentage] %>%</span>
              </div>
            </div>
            <% if idx < allocation_data[:segments].size - 1 %>
              <%= render "shared/ruler", classes: "mx-3 lg:mx-4" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
